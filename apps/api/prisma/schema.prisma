// This is your Prisma schema file

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
  moduleFormat = "cjs"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
}

model User {
  id              Int      @id @default(autoincrement())
  email           String   @unique
  passwordHash    String
  telegramChatId  String?
  linkingCode     String?
  pushSubscription String? // Storing JSON stringified subscription
  notes           Note[]
  tags            Tag[]
}

model Note {
  id           String    @id @default(uuid())
  title        String
  content      String
  color        String?
  isPinned     Boolean   @default(false)
  isArchived   Boolean   @default(false)
  isDeleted    Boolean   @default(false) // Soft delete for trash bin (UI)
  syncDeleted  Boolean   @default(false) // Soft delete for sync (Flag to delete from other clients)
  deletedAt    DateTime?
  reminderDate DateTime?
  isReminderSent Boolean   @default(false)
  
  updatedAt    DateTime  @updatedAt
  createdAt    DateTime  @default(now())

  tags         Tag[]
  userId       Int
  user         User      @relation(fields: [userId], references: [id])

  @@index([updatedAt])
}

model Tag {
  id     String @id @default(uuid())
  name   String
  userId Int
  user   User   @relation(fields: [userId], references: [id])
  notes  Note[]

  updatedAt DateTime @updatedAt
  syncDeleted   Boolean  @default(false)

  @@unique([name, userId])
  @@index([updatedAt])
}
